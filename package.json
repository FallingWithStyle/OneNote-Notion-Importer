{
  "name": "oni",
  "version": "1.0.0",
  "description": "OneNote to Notion Importer (ONI) - A powerful, offline-first CLI tool for migrating OneNote content to Notion while preserving your notebook structure and giving you complete control over what gets imported.",
  "main": "dist/index.js",
  "bin": {
    "oni": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run build:cli && npm run build:gui && npm run build:gui:main",
    "build:cli": "tsc",
    "build:gui": "vite build",
    "build:gui:main": "tsc -p src/gui/tsconfig.json",
    "dev": "ts-node src/index.ts",
    "dev:gui": "concurrently \"npm run dev:gui:renderer\" \"npm run dev:gui:electron\"",
    "dev:gui:renderer": "vite",
    "dev:gui:electron": "wait-on http://localhost:8020 && electron dist/gui/main.js",
    "start": "node dist/index.js",
    "start:gui": "electron dist/gui/main.js",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --testPathPatterns=e2e",
    "test:performance": "jest --testPathPatterns=performance",
    "test:stress": "jest --testPathPatterns=stress",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance",
    "generate-test-data": "ts-node tests/fixtures/onenote/test-data-generator.ts",
    "coverage-check": "ts-node tests/coverage/coverage-monitor.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "onenote",
    "notion",
    "migration",
    "cli",
    "converter",
    "import",
    "export"
  ],
  "author": "Patrick",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron": "^1.4.38",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.0.2",
    "commander": "^14.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "nodemon": "^3.1.10",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "wait-on": "^8.0.5",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "@notionhq/client": "^5.1.0",
    "dotenv": "^17.2.2"
  }
}
